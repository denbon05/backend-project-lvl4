extends ../layouts/application.pug

block content
  a.nav-link(href=route('newStatus'))= t('views.statuses.new.create')
  table.table.table-striped
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.statuses.createdAt')
        th
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
          td.d-md-flex
            a(class='btn-link btn' href=route('editStatus', { id: status.id }))= t('views.manage.edit')
            +buttonTo(route('deleteStatus', { id: status.id }), 'delete')
              +submit(t('views.manage.delete'))
