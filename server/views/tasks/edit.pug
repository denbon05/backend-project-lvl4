extends ../layouts/application.pug

block header
  = t('views.tasks.editTitle')

block content
  +formFor()(action=route('updateTask', { id: task.id }) method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)(type="text" rows="3")
    +select(task, 'statusId', errors, statuses)
    +select(task, 'executorId', errors, users)
    +select(task, 'labels', errors, labels, true)
    input(name="_method" type="hidden" value='patch')
    input.btn.btn-primary(type='submit' value=t('views.manage.edit')) 
