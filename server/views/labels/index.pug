extends ../layouts/application.pug

block content
  a.nav-link(href=route('newLabel'))= t('views.labels.new.create')
  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
        th
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td.d-md-flex
            a(class='btn-link btn' href=route('editLabel', { id: label.id }))= t('views.manage.edit')
            +buttonTo(route('deleteLabel', { id: label.id }), 'delete')(value=t('views.manage.delete') class='btn-link btn')
